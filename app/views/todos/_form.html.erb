<div class="bg-white shadow-sm rounded-lg p-6 border border-gray-100">
  <%= form_with(model: todo, local: true, class: 'space-y-5') do |f| %>
    <% if todo.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md" role="alert">
        <strong class="font-semibold block mb-2">エラーが発生しました:</strong>
        <ul class="list-disc list-inside text-sm">
          <% todo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= f.label :title, 'タイトル', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_field :title, 
          class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm', 
          placeholder: 'TODOのタイトルを入力' %>
    </div>

    <div class="space-y-2">
      <%= f.label :description, '説明', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_area :description, 
          class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm', 
          rows: 4, 
          placeholder: 'TODOの詳細を入力' %>
    </div>

    <div class="space-y-2">
      <%= f.label :status, 'ステータス', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.select :status, 
          [['未着手', 'pending'], ['進行中', 'in_progress'], ['完了', 'completed']], 
          {}, 
          class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm' 
      %>
    </div>

    <div class="flex space-x-3">
      <%= f.submit class: 'bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300 ease-in-out text-sm' %>
      <%= link_to '戻る', todos_path, class: 'bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition duration-300 ease-in-out text-sm' %>
    </div>
  <% end %>
</div> 