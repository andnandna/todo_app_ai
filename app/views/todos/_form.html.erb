<div class="card">
  <div class="card-body">
    <%= form_with(model: todo, local: true) do |f| %>
      <% if todo.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h4>
          <ul class="mb-0">
            <% todo.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :title, 'タイトル', class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'TODOのタイトルを入力してください' %>
      </div>

      <div class="mb-3">
        <%= f.label :description, '説明', class: 'form-label' %>
        <%= f.text_area :description, class: 'form-control', rows: 5, placeholder: 'TODOの詳細な説明を入力してください' %>
      </div>

      <div class="mb-4">
        <%= f.label :status, 'ステータス', class: 'form-label' %>
        <%= f.select :status, 
          [['未着手', 'pending'], ['進行中', 'in_progress'], ['完了', 'completed']], 
          {}, 
          class: 'form-select' 
        %>
      </div>

      <div class="d-flex gap-2">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to '戻る', todos_path, class: 'btn btn-outline-secondary' %>
      </div>
    <% end %>
  </div>
</div> 