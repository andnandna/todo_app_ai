<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">TODO詳細</h1>
  <div class="btn-group">
    <%= link_to edit_todo_path(@todo), class: 'btn btn-warning' do %>
      <i class="bi bi-pencil"></i> 編集
    <% end %>
    <%= link_to todo_path(@todo), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' do %>
      <i class="bi bi-trash"></i> 削除
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="mb-4">
      <h5 class="card-title text-muted mb-2">タイトル</h5>
      <p class="card-text fs-4"><%= @todo.title %></p>
    </div>

    <div class="mb-4">
      <h5 class="card-title text-muted mb-2">説明</h5>
      <p class="card-text"><%= simple_format(@todo.description) %></p>
    </div>

    <div class="mb-4">
      <h5 class="card-title text-muted mb-2">ステータス</h5>
      <p class="card-text">
        <span class="badge <%= @todo.status == 'completed' ? 'bg-success' : (@todo.status == 'in_progress' ? 'bg-warning' : 'bg-secondary') %>">
          <%= @todo.status == 'in_progress' ? '進行中' : (@todo.status == 'completed' ? '完了' : '未着手') %>
        </span>
      </p>
    </div>

    <div class="border-top pt-3">
      <%= link_to todos_path, class: 'btn btn-outline-secondary' do %>
        <i class="bi bi-arrow-left"></i> 戻る
      <% end %>
    </div>
  </div>
</div>
