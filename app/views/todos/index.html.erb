<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">TODOリスト</h1>
  <%= link_to new_todo_path, class: 'btn btn-primary' do %>
    <i class="bi bi-plus-lg"></i> 新規TODO作成
  <% end %>
</div>

<div class="row">
  <% @todos.each do |todo| %>
    <div class="col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title mb-0"><%= todo.title %></h5>
            <span class="badge <%= todo.status == 'completed' ? 'bg-success' : (todo.status == 'in_progress' ? 'bg-warning' : 'bg-secondary') %>">
              <%= todo.status == 'in_progress' ? '進行中' : (todo.status == 'completed' ? '完了' : '未着手') %>
            </span>
          </div>
          
          <p class="card-text text-muted">
            <%= truncate(todo.description, length: 100) %>
          </p>

          <div class="btn-group">
            <%= link_to todo, class: 'btn btn-outline-info btn-sm' do %>
              <i class="bi bi-eye"></i> 詳細
            <% end %>
            <%= link_to edit_todo_path(todo), class: 'btn btn-outline-warning btn-sm' do %>
              <i class="bi bi-pencil"></i> 編集
            <% end %>
            <%= link_to todo, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-outline-danger btn-sm' do %>
              <i class="bi bi-trash"></i> 削除
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @todos.empty? %>
  <div class="text-center py-5">
    <i class="bi bi-clipboard-check display-1 text-muted"></i>
    <h3 class="mt-3 text-muted">TODOがありません</h3>
    <p class="text-muted">新しいTODOを作成してみましょう！</p>
  </div>
<% end %>
